{
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "no-console": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "no-use-before-define": ["error", { "variables": false }],
    "no-multi-str": 0,
    "semi": "off",
    "comma-dangle": "off",
    "arrow-body-style": "off",
    "arrow-parens": "off",
    "consistent-return": "off",
    "padded-blocks": "off",
    "object-curly-newline": "off",
    "class-methods-use-this": "off"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 9
  }
}
